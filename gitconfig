[alias]
	ci = commit
	st = status
	co = checkout
	di = diff --color-words
	move   = mv
	ren    = mv
	rename = mv
	up     = !git pull --rebase
	update = !git pull --rebase
	svnup     = !git stash && git svn rebase && git stash apply
	svnupdate = !git stash && git svn rebase && git stash apply
	stat = status
	del    = rm
	delete = rm
	remove = rm
	export = archive
	ann    = blame
	praise = blame
	cat  = show
	list = show
	ls   = show

	untrack-ignored = !git-untracked-ignored
	amend = commit --amend -C HEAD
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	pager =
[push]
	default = matching
